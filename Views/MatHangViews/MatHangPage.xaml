<Page
    x:Class="QuanLyDaiLy.Views.MatHangViews.MatHangPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1536"
    d:DesignWidth="1536"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="80*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Style="{StaticResource PageHeaderTextBlockStyle}"
            Text="Danh sách Mặt hàng" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*" />
                <ColumnDefinition Width=".5*" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <!--  Tra cứu mặt hàng Button  -->
                <Border Margin="20,0,0,0">
                    <Button Command="{Binding SearchMatHangCommand}" Style="{StaticResource PrimaryButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <fa:FontAwesome
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Icon="Search" />
                            <TextBlock VerticalAlignment="Center" Text="Tra cứu mặt hàng" />
                        </StackPanel>
                    </Button>
                </Border>

                <Border Margin="10,0,0,0">
                    <Button
                        Width="50"
                        Command="{Binding LoadDataCommand}"
                        Style="{StaticResource PrimaryButtonStyle}">
                        <fa:FontAwesome VerticalAlignment="Center" Icon="Refresh" />
                    </Button>
                </Border>
            </StackPanel>

            <StackPanel
                Grid.Column="1"
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Border>
                    <Button Command="{Binding AddMatHangCommand}" Style="{StaticResource PrimaryButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <fa:FontAwesome
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Icon="Plus" />
                            <TextBlock VerticalAlignment="Center" Text="Thêm mặt hàng" />
                        </StackPanel>
                    </Button>
                </Border>

                <Border Margin="10,0,0,0">
                    <Button
                        Width="180"
                        Command="{Binding EditMatHangCommand}"
                        Style="{StaticResource PrimaryButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <fa:FontAwesome
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Icon="Edit" />
                            <TextBlock VerticalAlignment="Center" Text="Cập nhật mặt hàng" />
                        </StackPanel>
                    </Button>
                </Border>

                <!--  Xóa Button  -->
                <Border Margin="10,0,0,0">
                    <Button Command="{Binding DeleteMatHangCommand}" Style="{StaticResource DeleteButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <fa:FontAwesome
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Icon="Trash" />
                            <TextBlock VerticalAlignment="Center" Text="Xóa mặt hàng" />
                        </StackPanel>
                    </Button>
                </Border>
            </StackPanel>
        </Grid>

        <Border
            Grid.Row="2"
            Margin="20"
            Background="#F7F9FD"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Opacity="0.2"
                    ShadowDepth="3"
                    Color="Black" />
            </Border.Effect>
            <DataGrid
                AlternatingRowBackground="#F8F9FA"
                AutoGenerateColumns="False"
                Background="White"
                BorderThickness="0"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                IsReadOnly="True"
                ItemsSource="{Binding DanhSachMatHang}"
                RowBackground="#FFFFFF"
                RowHeight="60"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectedItem="{Binding SelectedMatHang}">
                <DataGrid.Resources>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                        <Setter Property="Padding" Value="10,0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        SnapsToDevicePixels="True">
                                        <ContentPresenter
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                        <Setter Property="BorderBrush" Value="#E0E0E0" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F9FF" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#00AAFF" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#EAEEF5" />
                        <Setter Property="FontFamily" Value="Open Sans" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="FontSize" Value="22.5" />
                        <Setter Property="Foreground" Value="#333333" />
                        <Setter Property="Height" Value="50" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Padding" Value="10,0" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding MaMatHang}"
                        Header="Mã mặt hàng">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Open Sans" />
                                <Setter Property="FontSize" Value="15" />
                                <Setter Property="Foreground" Value="#333333" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="TextAlignment" Value="Center" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="FontWeight" Value="SemiBold" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding TenMatHang}"
                        Header="Tên mặt hàng">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Open Sans" />
                                <Setter Property="FontSize" Value="15" />
                                <Setter Property="Foreground" Value="#333333" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="TextAlignment" Value="Center" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="FontWeight" Value="SemiBold" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding DonViTinh.TenDonViTinh}"
                        Header="Đơn vị tính">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Open Sans" />
                                <Setter Property="FontSize" Value="15" />
                                <Setter Property="Foreground" Value="#333333" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="TextAlignment" Value="Center" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="FontWeight" Value="SemiBold" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding SoLuongTon}"
                        Header="Số lượng tồn">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Open Sans" />
                                <Setter Property="FontSize" Value="15" />
                                <Setter Property="Foreground" Value="#333333" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="TextAlignment" Value="Center" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="FontWeight" Value="SemiBold" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>