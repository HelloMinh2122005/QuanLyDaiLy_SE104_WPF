<Page
    x:Class="QuanLyDaiLy.Views.LoaiDaiLyViews.LoaiDaiLyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuanLyDaiLy.Views.LoaiDaiLyViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1536"
    d:DesignWidth="1536"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".2*" />
            <RowDefinition Height=".1*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontFamily="Nunito"
            FontSize="90"
            FontStyle="Normal"
            FontWeight="Bold"
            Foreground="#333333"
            LineHeight="55"
            Text="Danh sách loại đại lý" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*" />
                <ColumnDefinition Width=".5*" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                Margin="0,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <!--  Tra cứu đại lý Button  -->
                <Border
                    Width="250"
                    Height="50"
                    Margin="20,0,0,0"
                    CornerRadius="8">
                    <Button
                        Width="250"
                        Height="50"
                        Background="#00AAFF"
                        Command="{Binding SearchDaiLyCommand}"
                        Content="🔍 Tra cứu đại lý"
                        FontFamily="Roboto"
                        FontSize="28"
                        FontStyle="Normal"
                        FontWeight="Medium"
                        Foreground="#FFFFFF">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                x:Name="buttonBorder"
                                                Padding="16,10,16,8"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                <Border.Effect>
                                                    <DropShadowEffect
                                                        x:Name="shadowEffect"
                                                        BlurRadius="0"
                                                        Opacity="0"
                                                        ShadowDepth="0"
                                                        Color="#555555" />
                                                </Border.Effect>
                                            </Border>
                                            <ControlTemplate.Resources>
                                                <Storyboard x:Key="HoverOn">
                                                    <ColorAnimation
                                                        Storyboard.TargetName="buttonBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#0088CC"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="BlurRadius"
                                                        To="8"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="Opacity"
                                                        To="0.3"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="ShadowDepth"
                                                        To="4"
                                                        Duration="0:0:0.2" />
                                                </Storyboard>
                                                <Storyboard x:Key="HoverOff">
                                                    <ColorAnimation
                                                        Storyboard.TargetName="buttonBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#00AAFF"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="BlurRadius"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="Opacity"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="ShadowDepth"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                </Storyboard>
                                            </ControlTemplate.Resources>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard Storyboard="{StaticResource HoverOn}" />
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard Storyboard="{StaticResource HoverOff}" />
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="buttonBorder" Property="Background" Value="#006699" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>

                <Border
                    Width="70"
                    Height="50"
                    Margin="20,0,0,0"
                    CornerRadius="8">
                    <Button
                        Width="70"
                        Height="50"
                        Background="#00AAFF"
                        Command="{Binding LoadDataCommand}"
                        Content="🔃"
                        FontFamily="Roboto"
                        FontSize="28"
                        FontStyle="Normal"
                        FontWeight="Medium"
                        Foreground="#FFFFFF">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                x:Name="buttonBorder"
                                                Padding="16,10,16,8"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                <Border.Effect>
                                                    <DropShadowEffect
                                                        x:Name="shadowEffect"
                                                        BlurRadius="0"
                                                        Opacity="0"
                                                        ShadowDepth="0"
                                                        Color="#555555" />
                                                </Border.Effect>
                                            </Border>
                                            <ControlTemplate.Resources>
                                                <Storyboard x:Key="HoverOn">
                                                    <ColorAnimation
                                                        Storyboard.TargetName="buttonBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#0088CC"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="BlurRadius"
                                                        To="8"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="Opacity"
                                                        To="0.3"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="ShadowDepth"
                                                        To="4"
                                                        Duration="0:0:0.2" />
                                                </Storyboard>
                                                <Storyboard x:Key="HoverOff">
                                                    <ColorAnimation
                                                        Storyboard.TargetName="buttonBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#00AAFF"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="BlurRadius"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="Opacity"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="ShadowDepth"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                </Storyboard>
                                            </ControlTemplate.Resources>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard Storyboard="{StaticResource HoverOn}" />
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard Storyboard="{StaticResource HoverOff}" />
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="buttonBorder" Property="Background" Value="#006699" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>

            </StackPanel>

            <StackPanel
                Grid.Column="1"
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <!--  Thêm Button  -->
                <Border
                    Width="150"
                    Height="50"
                    Margin="10,0,0,0"
                    CornerRadius="8">
                    <Button
                        Width="150"
                        Height="50"
                        Background="#00AAFF"
                        Command="{Binding OpenHoSoDaiLyCommand}"
                        Content="➕ Thêm"
                        FontFamily="Roboto"
                        FontSize="28"
                        FontStyle="Normal"
                        FontWeight="Medium"
                        Foreground="#FFFFFF">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                x:Name="buttonBorder"
                                                Padding="16,10,16,8"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                <Border.Effect>
                                                    <DropShadowEffect
                                                        x:Name="shadowEffect"
                                                        BlurRadius="0"
                                                        Opacity="0"
                                                        ShadowDepth="0"
                                                        Color="#555555" />
                                                </Border.Effect>
                                            </Border>
                                            <ControlTemplate.Resources>
                                                <Storyboard x:Key="HoverOn">
                                                    <ColorAnimation
                                                        Storyboard.TargetName="buttonBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#0088CC"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="BlurRadius"
                                                        To="8"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="Opacity"
                                                        To="0.3"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="ShadowDepth"
                                                        To="4"
                                                        Duration="0:0:0.2" />
                                                </Storyboard>
                                                <Storyboard x:Key="HoverOff">
                                                    <ColorAnimation
                                                        Storyboard.TargetName="buttonBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#00AAFF"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="BlurRadius"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="Opacity"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="ShadowDepth"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                </Storyboard>
                                            </ControlTemplate.Resources>
                                            <ControlTemplate.Triggers>
