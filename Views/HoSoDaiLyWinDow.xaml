<Window x:Class="QuanLyDaiLy.Views.HoSoDaiLyWinDow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyDaiLy.Views"
        mc:Ignorable="d"
        Title="HoSoDaiLyWinDow" Height="542" Width="960"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
    </Window.Resources>

    <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="20" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="381"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".5*"/>
                    <ColumnDefinition Width=".5*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="20,15,0,0">
                    <TextBlock Text="Tiếp nhận đại lý" 
                               FontFamily="Nunito" 
                               FontStyle="Normal" 
                               FontWeight="SemiBold" 
                               FontSize="40" 
                               LineHeight="55" />
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0" HorizontalAlignment="Right">
                    <Button Content="❌" 
                            FontFamily="Nunito" 
                            FontStyle="Normal" 
                            FontWeight="SemiBold" 
                            FontSize="35"
                            Width="50" 
                            Height="50" 
                            Background="Transparent" 
                            BorderBrush="Transparent"
                            HorizontalContentAlignment="Center" 
                            VerticalContentAlignment="Center"
                            Command="{Binding CloseWindowCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="buttonBorder" 
                                        Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#D32F2F"/>
                                        <Setter TargetName="buttonBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="8" ShadowDepth="4" Opacity="0.3" Color="#555555"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#B71C1C"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

            </Grid>
            <!-- Body -->
            <Border Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="15" CornerRadius="11" Background="#F7F9FD" Padding="10" BorderBrush="Transparent"
                    Effect="{StaticResource DropShadowEffect}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="33*"/>
                        <RowDefinition Height="33*"/>
                        <RowDefinition Height="33*"/>
                    </Grid.RowDefinitions>

                    <!-- Line 1 -->
                    <Grid Grid.Row="0" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25*"/>
                            <ColumnDefinition Width="25*"/>
                            <ColumnDefinition Width="25*"/>
                            <ColumnDefinition Width="25*"/>
                        </Grid.ColumnDefinitions>
                        <!-- Mã đại lý -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="7*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Mã đại lý" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Left"
                                       FontFamily="Nunito"
                                       FontStyle="Normal"
                                       FontWeight="Medium"
                                       FontSize="25"
                                       Foreground="#000000"
                                       Margin="10,0,0,0"/>
                            <TextBox Grid.Row="1"
                                    Background="#FFFFFF" 
                                    BorderBrush="#33000000"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Margin="10"
                                    FontFamily="Nunito"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    FontSize="14"
                                    Foreground="#9A000000"
                                    TextAlignment="Left"
                                    BorderThickness="1">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>

                        <!-- Tên đại lý -->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="7*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Tên đại lý" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Left"
                                       FontFamily="Nunito"
                                       FontStyle="Normal"
                                       FontWeight="Medium"
                                       FontSize="25"
                                       Foreground="#000000"
                                       Margin="10,0,0,0"/>
                            <TextBox Grid.Row="1"
                                    Background="#FFFFFF" 
                                    BorderBrush="#33000000"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Margin="10"
                                    FontFamily="Nunito"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    FontSize="14"
                                    Foreground="#9A000000"
                                    TextAlignment="Left"
                                    BorderThickness="1">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>

                        <!-- Tên loại đại lý -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="7*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Tên loại đại lý" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Left"
                                       FontFamily="Nunito"
                                       FontStyle="Normal"
                                       FontWeight="Medium"
                                       FontSize="25"
                                       Foreground="#000000"
                                       Margin="10,0,0,0"/>
                            <TextBox Grid.Row="1"
                                    Background="#FFFFFF" 
                                    BorderBrush="#33000000"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Margin="10"
                                    FontFamily="Nunito"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    FontSize="14"
                                    Foreground="#9A000000"
                                    TextAlignment="Left"
                                    BorderThickness="1">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>

                        <!-- Tên quận -->
                        <Grid Grid.Column="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="7*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Tên quận" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Left"
                                       FontFamily="Nunito"
                                       FontStyle="Normal"
                                       FontWeight="Medium"
                                       FontSize="25"
                                       Foreground="#000000"
                                       Margin="10,0,0,0"/>
                            <TextBox Grid.Row="1"
                                    Background="#FFFFFF" 
                                    BorderBrush="#33000000"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Margin="10"
                                    FontFamily="Nunito"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    FontSize="14"
                                    Foreground="#9A000000"
                                    TextAlignment="Left"
                                    BorderThickness="1">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>

                    </Grid>

                    <!-- Line 2 -->
                    <Grid Grid.Row="1" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="33*"/>
                            <ColumnDefinition Width="33*"/>
                            <ColumnDefinition Width="34*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Số điện thoại -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="7*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Số điện thoại" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Left"
                                       FontFamily="Nunito"
                                       FontStyle="Normal"
                                       FontWeight="Medium"
                                       FontSize="25"
                                       Foreground="#000000"
                                       Margin="10,0,0,0"/>
                            <TextBox Grid.Row="1"
                                    Background="#FFFFFF" 
                                    BorderBrush="#33000000"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Margin="10"
                                    FontFamily="Nunito"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    FontSize="14"
                                    Foreground="#9A000000"
                                    TextAlignment="Left"
                                    BorderThickness="1">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>

                        <!-- Email -->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="7*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Email" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Left"
                                       FontFamily="Nunito"
                                       FontStyle="Normal"
                                       FontWeight="Medium"
                                       FontSize="25"
                                       Foreground="#000000"
                                       Margin="10,0,0,0"/>
                            <TextBox Grid.Row="1"
                                    Background="#FFFFFF" 
                                    BorderBrush="#33000000"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Margin="10"
                                    FontFamily="Nunito"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    FontSize="14"
                                    Foreground="#9A000000"
                                    TextAlignment="Left"
                                    BorderThickness="1">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>

                        <!-- Tên quận -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="7*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Tên quận" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Left"
                                       FontFamily="Nunito"
                                       FontStyle="Normal"
                                       FontWeight="Medium"
                                       FontSize="25"
                                       Foreground="#000000"
                                       Margin="10,0,0,0"/>
                            <TextBox Grid.Row="1"
                                    Background="#FFFFFF" 
                                    BorderBrush="#33000000"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Margin="10"
                                    FontFamily="Nunito"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    FontSize="14"
                                    Foreground="#9A000000"
                                    TextAlignment="Left"
                                    BorderThickness="1">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>
                    </Grid>

                    <!-- Line 3 -->
                    <!-- Địa chỉ -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="46*"/>
                            <RowDefinition Height="61*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                       Text="Địa chỉ" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Left"
                                       FontFamily="Nunito"
                                       FontStyle="Normal"
                                       FontWeight="Medium"
                                       FontSize="25"
                                       Foreground="#000000"
                                       Margin="20,0,0,0"/>
                        <TextBox Grid.Row="1"
                                    Background="#FFFFFF" 
                                    BorderBrush="#33000000"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Margin="20,0,20,10"
                                    FontFamily="Nunito"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    FontSize="14"
                                    Foreground="#9A000000"
                                    TextAlignment="Left"
                                    BorderThickness="1">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>
                </Grid>
            </Border>
            <!-- Footer -->
            <StackPanel Grid.Row="4" Margin="20" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Stretch">
                <Border CornerRadius="8">
                    <Button Content="Tiếp nhận đại lý" Command="{Binding CloseWindowCommand}" 
                            Background="#00AAFF" 
                            Foreground="#FFFFFF" 
                            FontFamily="Roboto" 
                            FontStyle="Normal" 
                            FontWeight="Medium" 
                            FontSize="19"
                            Width="180">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="buttonBorder" Background="{TemplateBinding Background}" 
                                        CornerRadius="8" Padding="16,10,16,8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#0088CC"/>
                                        <Setter TargetName="buttonBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="8" ShadowDepth="4" Opacity="0.3" Color="#555555"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#006699"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>

                <Border Margin="80, 0, 0, 0"
                        CornerRadius="8">
                    <Button Content="Đại lý mới" Command="{Binding CloseWindowCommand}" 
                            Background="#00AAFF" 
                            Foreground="#FFFFFF" 
                            FontFamily="Roboto" 
                            FontStyle="Normal" 
                            FontWeight="Medium" 
                            FontSize="19" 
                            Width="180">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="buttonBorder" Background="{TemplateBinding Background}" 
                                        CornerRadius="8" Padding="16,10,16,8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#0088CC"/>
                                        <Setter TargetName="buttonBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="8" ShadowDepth="4" Opacity="0.3" Color="#555555"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#006699"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>

                <Border Margin="80, 0, 0, 0"
                        CornerRadius="8">
                    <Button Content="Thoát" Command="{Binding CloseWindowCommand}" 
                            Background="#00AAFF" 
                            Foreground="#FFFFFF" 
                            FontFamily="Roboto" 
                            FontStyle="Normal" 
                            FontWeight="Medium" 
                            FontSize="19" 
                            Width="180">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="buttonBorder" Background="{TemplateBinding Background}" 
                        CornerRadius="8" Padding="16,10,16,8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#D32F2F"/>
                                        <Setter TargetName="buttonBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="8" ShadowDepth="4" Opacity="0.3" Color="#555555"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#B71C1C"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</Window>