<Window
    x:Class="QuanLyDaiLy.Views.PhieuXuatViews.ThemPhieuXuatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:QuanLyDaiLy.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="HoSoDaiLyWinDow"
    Width="1360"
    Height="742"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <DropShadowEffect
            x:Key="DropShadowEffect"
            BlurRadius="10"
            Opacity="0.5"
            ShadowDepth="0"
            Color="Black" />

        <helpers:ComboBoxItemConverter x:Key="ComboBoxItemConverter" />
        <helpers:RowToIndexConverter x:Key="RowToIndexConverter" />

        <!--  ComboBox Style  -->
        <Style x:Key="StyledComboBox" TargetType="{x:Type ComboBox}">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#33000000" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="FontFamily" Value="Nunito" />
            <Setter Property="FontStyle" Value="Normal" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Foreground" Value="#000000" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <Border
                                x:Name="mainBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                                <Grid>
                                    <ToggleButton
                                        x:Name="toggleButton"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        ClickMode="Press"
                                        Focusable="false"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Grid Background="Transparent">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="30" />
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.ColumnSpan="2" Background="Transparent" />
                                                    <Path
                                                        x:Name="arrow"
                                                        Grid.Column="1"
                                                        Width="12"
                                                        Height="12"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Data="M7 10l5 5 5-5z"
                                                        Fill="#9A000000"
                                                        Stretch="Fill" />
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="true">
                                                        <Setter TargetName="arrow" Property="Fill" Value="#0088CC" />
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="true">
                                                        <Setter TargetName="arrow" Property="Fill" Value="#0088CC" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>

                                    <TextBlock
                                        x:Name="contentText"
                                        Margin="10,0,30,0"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        Text="{TemplateBinding SelectionBoxItem,
                                                               Converter={StaticResource ComboBoxItemConverter}}" />
                                </Grid>
                            </Border>

                            <Popup
                                x:Name="PART_Popup"
                                AllowsTransparency="True"
                                Focusable="False"
                                IsOpen="{Binding IsChecked, ElementName=toggleButton}"
                                Placement="Bottom"
                                PopupAnimation="Slide">
                                <Border
                                    x:Name="dropDownBorder"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    Margin="0,1,0,0"
                                    Background="#FFFFFF"
                                    BorderBrush="#33000000"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Effect="{StaticResource DropShadowEffect}">
                                    <ScrollViewer MaxHeight="200" SnapsToDevicePixels="True">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="mainBorder" Property="BorderBrush" Value="#0088CC" />
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="mainBorder" Property="BorderBrush" Value="#0088CC" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="mainBorder" Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  ComboBoxItem Style  -->
        <Style TargetType="{x:Type ComboBoxItem}">
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                        <Border
                            x:Name="ItemBorder"
                            Margin="2,1"
                            Padding="{TemplateBinding Padding}"
                            Background="Transparent"
                            CornerRadius="5">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#E3F2FD" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#BBDEFB" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border
        Background="White"
        BorderBrush="#DDDDDD"
        BorderThickness="1"
        CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="1" />
                <RowDefinition Height="581" />
                <RowDefinition Height="1" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".5*" />
                    <ColumnDefinition Width=".5*" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="0"
                    Margin="20,15,0,0"
                    VerticalAlignment="Center">
                    <TextBlock
                        FontFamily="Nunito"
                        FontSize="40"
                        FontStyle="Normal"
                        FontWeight="SemiBold"
                        LineHeight="55"
                        Text="Lập phiếu xuất hàng" />
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    Margin="0,0,20,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                    <Button
                        Width="50"
                        Height="50"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Command="{Binding CloseCommand}"
                        Content="❌"
                        FontFamily="Nunito"
                        FontSize="35"
                        FontStyle="Normal"
                        FontWeight="SemiBold">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                x:Name="buttonBorder"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                <Border.Effect>
                                                    <DropShadowEffect
                                                        x:Name="shadowEffect"
                                                        BlurRadius="0"
                                                        Opacity="0"
                                                        ShadowDepth="0"
                                                        Color="#555555" />
                                                </Border.Effect>
                                            </Border>
                                            <ControlTemplate.Resources>
                                                <Storyboard x:Key="HoverOn">
                                                    <ColorAnimation
                                                        Storyboard.TargetName="buttonBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#D32F2F"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="BlurRadius"
                                                        To="8"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="Opacity"
                                                        To="0.3"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="ShadowDepth"
                                                        To="4"
                                                        Duration="0:0:0.2" />
                                                </Storyboard>
                                                <Storyboard x:Key="HoverOff">
                                                    <ColorAnimation
                                                        Storyboard.TargetName="buttonBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="Transparent"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="BlurRadius"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="Opacity"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="ShadowDepth"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                </Storyboard>
                                            </ControlTemplate.Resources>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard Storyboard="{StaticResource HoverOn}" />
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard Storyboard="{StaticResource HoverOff}" />
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="buttonBorder" Property="Background" Value="#B71C1C" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <Border Grid.Row="1" Background="LightGray" />
            <Border Grid.Row="3" Background="LightGray" />

            <!--  Body  -->
            <Border
                Grid.Row="2"
                Margin="15"
                Padding="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="#F7F9FD"
                BorderBrush="Transparent"
                CornerRadius="11"
                Effect="{StaticResource DropShadowEffect}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20*" />
                        <RowDefinition Height="7*" />
                        <RowDefinition Height="73*" />
                    </Grid.RowDefinitions>

                    <!--  Line 1  -->
                    <Grid
                        Grid.Row="0"
                        Margin="0,10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="14*" />
                            <ColumnDefinition Width="16*" />
                            <ColumnDefinition Width="14*" />
                            <ColumnDefinition Width="14*" />
                            <ColumnDefinition Width="14*" />
                            <ColumnDefinition Width="14*" />
                        </Grid.ColumnDefinitions>

                        <!--  Mã phiếu xuất  -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*" />
                                <RowDefinition Height="7*" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Nunito"
                                FontSize="20"
                                FontStyle="Normal"
                                FontWeight="Medium"
                                Foreground="#000000"
                                Text="Mã phiếu xuất" />
                            <TextBox
                                Grid.Row="1"
                                Margin="10"
                                Padding="10,0,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Background="#A2A2A2"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                FontFamily="Nunito"
                                FontSize="15"
                                FontStyle="Normal"
                                FontWeight="SemiBold"
                                Foreground="White"
                                IsReadOnly="True"
                                Text="{Binding MaPhieuXuat}"
                                TextAlignment="Left">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="10" />
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>

                        <!--  Tên đại lý  -->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*" />
                                <RowDefinition Height="7*" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Nunito"
                                FontSize="20"
                                FontStyle="Normal"
                                FontWeight="Medium"
                                Foreground="#000000"
                                Text="Tên đại lý" />
                            <!--  Tên đại lý ComboBox  -->
                            <ComboBox
                                Grid.Row="1"
                                ItemsSource="{Binding DaiLies}"
                                SelectedItem="{Binding SelectedDaiLy}"
                                Style="{StaticResource StyledComboBox}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TenDaiLy}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>

                        <!--  Third Column  -->
                        <Grid Grid.Column="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*" />
                                <RowDefinition Height="7*" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Nunito"
                                FontSize="20"
                                FontStyle="Normal"
                                FontWeight="Medium"
                                Foreground="#000000"
                                Text="Nợ tối đa" />
                            <TextBox
                                Grid.Row="1"
                                Margin="10"
                                Padding="10,0,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Background="#A2A2A2"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                FontFamily="Nunito"
                                FontSize="20"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="White"
                                IsReadOnly="True"
                                Text="{Binding NoToiDa}"
                                TextAlignment="Left">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="10" />
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>

                        <!--  Fourth Column  -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*" />
                                <RowDefinition Height="7*" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Nunito"
                                FontSize="20"
                                FontStyle="Normal"
                                FontWeight="Medium"
                                Foreground="#000000"
                                Text="Nợ đại lý" />
                            <TextBox
                                Grid.Row="1"
                                Margin="10"
                                Padding="10,0,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Background="#A2A2A2"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                FontFamily="Nunito"
                                FontSize="20"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="White "
                                IsReadOnly="True"
                                Text="{Binding TienNo}"
                                TextAlignment="Left">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="10" />
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>

                        <!--  Sixth Column  -->
                        <Grid Grid.Column="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*" />
                                <RowDefinition Height="7*" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Nunito"
                                FontSize="20"
                                FontStyle="Normal"
                                FontWeight="Medium"
                                Foreground="#000000"
                                Text="Ngày lập" />
                            <DatePicker
                                Grid.Row="1"
                                Margin="10,10,10,10"
                                Padding="10,0,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="#FFFFFF"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                FontFamily="Nunito"
                                FontSize="20"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#9A000000"
                                SelectedDate="{Binding NgayLap}">

                                <DatePicker.Resources>
                                    <Style TargetType="DatePickerTextBox">
                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                        <Setter Property="Background" Value="Transparent" />
                                    </Style>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="10" />
                                    </Style>
                                    <!--  Style for the dropdown button  -->
                                    <Style x:Key="DatePickerDropDownButtonStyle" TargetType="{x:Type Button}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Grid>
                                                        <Border
                                                            Width="30"
                                                            Height="30"
                                                            Margin="0,0,5,0"
                                                            HorizontalAlignment="Right"
                                                            Background="Transparent">
                                                            <Path
                                                                x:Name="Path"
                                                                Width="20"
                                                                Height="20"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                Data="M19,4H17V3a1,1,0,0,0-2,0V4H9V3A1,1,0,0,0,7,3V4H5A3,3,0,0,0,2,7V19a3,3,0,0,0,3,3H19a3,3,0,0,0,3-3V7A3,3,0,0,0,19,4Zm1,15a1,1,0,0,1-1,1H5a1,1,0,0,1-1-1V10H20Zm0-11H4V7A1,1,0,0,1,5,6H7V7A1,1,0,0,0,9,7V6h6V7a1,1,0,0,0,2,0V6h2a1,1,0,0,1,1,1Z"
                                                                Fill="#9A000000"
                                                                Stretch="Uniform" />
                                                        </Border>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Path" Property="Fill" Value="#0088CC" />
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="Path" Property="Fill" Value="#006699" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DatePicker.Resources>

                                <DatePicker.CalendarStyle>
                                    <Style TargetType="Calendar">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Calendar">
                                                    <Border
                                                        Background="White"
                                                        BorderBrush="#33000000"
                                                        BorderThickness="1"
                                                        CornerRadius="10">
                                                        <CalendarItem
                                                            x:Name="PART_CalendarItem"
                                                            Margin="0"
                                                            Padding="5,5,5,5"
                                                            BorderThickness="0" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DatePicker.CalendarStyle>

                                <!--  Apply the custom button style to the DatePicker dropdown button  -->
                                <DatePicker.Style>
                                    <Style BasedOn="{StaticResource {x:Type DatePicker}}" TargetType="{x:Type DatePicker}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type DatePicker}">
                                                    <Border
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="10">
                                                        <Grid x:Name="PART_Root">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>
                                                            <Button
                                                                x:Name="PART_Button"
                                                                Grid.Column="1"
                                                                VerticalAlignment="Center"
                                                                Focusable="False"
                                                                Style="{StaticResource DatePickerDropDownButtonStyle}" />
                                                            <DatePickerTextBox
                                                                x:Name="PART_TextBox"
                                                                Grid.Column="0"
                                                                Padding="{TemplateBinding Padding}"
                                                                HorizontalContentAlignment="Stretch"
                                                                VerticalContentAlignment="Center"
                                                                FontFamily="{TemplateBinding FontFamily}"
                                                                FontSize="{TemplateBinding FontSize}" />
                                                            <Popup
                                                                x:Name="PART_Popup"
                                                                AllowsTransparency="True"
                                                                PlacementTarget="{Binding ElementName=PART_Root}"
                                                                StaysOpen="False" />
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DatePicker.Style>
                            </DatePicker>
                        </Grid>

                        <!--  Tổng tiền  -->
                        <Grid Grid.Column="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*" />
                                <RowDefinition Height="7*" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Nunito"
                                FontSize="20"
                                FontStyle="Normal"
                                FontWeight="Medium"
                                Foreground="#000000"
                                Text="Tổng tiền" />
                            <TextBox
                                Grid.Row="1"
                                Margin="10"
                                Padding="10,0,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Background="#A2A2A2"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                FontFamily="Nunito"
                                FontSize="20"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="White"
                                IsReadOnly="True"
                                Text="{Binding TongTien}"
                                TextAlignment="Left">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="10" />
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>

                    </Grid>

                    <!--  Line 2  -->
                    <StackPanel
                        Grid.Row="1"
                        Margin="20,0,10,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Border Margin="20,0,20,0" CornerRadius="8">
                            <Button
                                Width="150"
                                Background="#00AAFF"
                                Command="{Binding BoChonMatHangCommand}"
                                Content="Bỏ chọn"
                                FontFamily="Roboto"
                                FontSize="16"
                                FontStyle="Normal"
                                FontWeight="Medium"
                                Foreground="#FFFFFF">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border
                                                        x:Name="buttonBorder"
                                                        Padding="16,10,16,8"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                        <Border.Effect>
                                                            <DropShadowEffect
                                                                x:Name="shadowEffect"
                                                                BlurRadius="0"
                                                                Opacity="0"
                                                                ShadowDepth="0"
                                                                Color="#555555" />
                                                        </Border.Effect>
                                                    </Border>
                                                    <ControlTemplate.Resources>
                                                        <Storyboard x:Key="HoverOn">
                                                            <ColorAnimation
                                                                Storyboard.TargetName="buttonBorder"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#0088CC"
                                                                Duration="0:0:0.2" />
                                                            <DoubleAnimation
                                                                Storyboard.TargetName="shadowEffect"
                                                                Storyboard.TargetProperty="BlurRadius"
