<Window x:Class="QuanLyDaiLy.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyDaiLy.Views"
        mc:Ignorable="d"
        Title="MainWindow" 
        Background="#FFFFFF"
        Height="960" Width="1536">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".2*"/>
            <RowDefinition Height=".1*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Danh sách đại lý" 
                    FontFamily="Nunito" 
                    FontStyle="Normal" 
                    FontWeight="Bold" 
                    FontSize="90" 
                    LineHeight="55" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Foreground="#333333"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".5*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center"
                        Margin="0,0,20,0">

                <!-- Thêm Button -->
                <Border Width="250" Height="50" 
                        Background="#00AAFF" 
                        Margin="20, 0, 0, 0"
                        CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect 
                                ShadowDepth="4" 
                                BlurRadius="8" 
                                Opacity="0.15" 
                                Color="Black"/>
                    </Border.Effect>
                    <Button Content="Tra cứu đại lý" Command="{Binding SearchDaiLyCommand}" 
                            Background="Transparent" 
                            Foreground="#FFFFFF" 
                            FontFamily="Roboto" 
                            FontStyle="Normal" 
                            FontWeight="Medium" 
                            FontSize="30" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Padding="16,10,16,8" 
                            BorderThickness="0" Width="250" Height="60">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0088CC"/>
                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>

                
            </StackPanel>

            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Margin="0,0,20,0">
                <!-- Thêm Button -->
                <Border Width="150" Height="50" 
                        Background="#00AAFF" 
                        Margin="10, 0, 0, 0"
                        CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect 
                            ShadowDepth="4" 
                            BlurRadius="8" 
                            Opacity="0.15" 
                            Color="Black"/>
                    </Border.Effect>
                    <Button Content="Thêm" Command="{Binding OpenHoSoDaiLyCommand}" 
                            Background="Transparent" 
                            Foreground="#FFFFFF" 
                            FontFamily="Roboto" 
                            FontStyle="Normal" 
                            FontWeight="Medium" 
                            FontSize="30" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Padding="16,10,16,8" 
                            BorderThickness="0" Width="150" Height="60">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0088CC"/>
                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>

                <!-- Sửa Button -->
                <Border Width="150" Height="50" 
                        Background="#00AAFF" 
                        Margin="20, 0, 0, 0"
                        CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect 
                            ShadowDepth="4" 
                            BlurRadius="8" 
                            Opacity="0.15" 
                            Color="Black"/>
                    </Border.Effect>
                    <Button Content="Sửa" Command="{Binding EditDaiLyCommand}" 
                            Background="Transparent" 
                            Foreground="#FFFFFF" 
                            FontFamily="Roboto" 
                            FontStyle="Normal" 
                            FontWeight="Medium" 
                            FontSize="30" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Padding="16,10,16,8" 
                            BorderThickness="0" Width="150" Height="60">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3E8E41"/>
                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>

                <!-- Xóa Button -->
                <Border Width="150" Height="50" 
                        Background="#00AAFF" 
                        Margin="20, 0, 0, 0"
                        CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect 
                            ShadowDepth="4" 
                            BlurRadius="8" 
                            Opacity="0.15" 
                            Color="Black"/>
                    </Border.Effect>
                    <Button Content="Xóa" Command="{Binding DeleteDaiLyCommand}" 
                            Background="Transparent" 
                            Foreground="#FFFFFF" 
                            FontFamily="Roboto" 
                            FontStyle="Normal" 
                            FontWeight="Medium" 
                            FontSize="30" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Padding="16,10,16,8" 
                            BorderThickness="0" Width="150" Height="60">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D32F2F"/>
                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>
            </StackPanel>
        </Grid>

        
        
        <Border Grid.Row="2" 
        Background="#F7F9FD" 
        CornerRadius="12" 
        Margin="20" 
        BorderThickness="1" 
        BorderBrush="#E0E0E0">
            <Border.Effect>
                <DropShadowEffect 
            ShadowDepth="3" 
            BlurRadius="10" 
            Opacity="0.2" 
            Color="Black"/>
            </Border.Effect>

            <DataGrid ItemsSource="{Binding DanhSachDaiLy}"
              AutoGenerateColumns="False"
              Background="Transparent"
              BorderThickness="0"
              GridLinesVisibility="Horizontal"
              HeadersVisibility="Column"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              IsReadOnly="True"
              RowHeight="60"
              ScrollViewer.VerticalScrollBarVisibility="Auto">
                <DataGrid.Resources>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="Padding" Value="10,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Background="{TemplateBinding Background}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    SnapsToDevicePixels="True">
                                        <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F5FF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E1EBFF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#EAEEF5"/>
                        <Setter Property="FontFamily" Value="Open Sans"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="22.5"/>
                        <Setter Property="Foreground" Value="#333333"/>
                        <Setter Property="Height" Value="50"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="10,0"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã đại lý" Binding="{Binding MaDaiLy}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Open Sans"/>
                                <Setter Property="FontSize" Value="18"/>
                                <Setter Property="Foreground" Value="#333333"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Tên đại lý" Binding="{Binding TenDaiLy}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Open Sans"/>
                                <Setter Property="FontSize" Value="18"/>
                                <Setter Property="Foreground" Value="#333333"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding DiaChi}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Open Sans"/>
                                <Setter Property="FontSize" Value="18"/>
                                <Setter Property="Foreground" Value="#333333"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Quận" Binding="{Binding Quan.TenQuan}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Open Sans"/>
                                <Setter Property="FontSize" Value="18"/>
                                <Setter Property="Foreground" Value="#333333"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Loại đại lý" Binding="{Binding LoaiDaiLy.TenLoaiDaiLy}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Open Sans"/>
                                <Setter Property="FontSize" Value="18"/>
                                <Setter Property="Foreground" Value="#333333"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Điện thoại" Binding="{Binding DienThoai}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Open Sans"/>
                                <Setter Property="FontSize" Value="18"/>
                                <Setter Property="Foreground" Value="#333333"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Ngày tiếp nhận" Binding="{Binding NgayTiepNhan, StringFormat={}{0:dd/MM/yyyy}}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Open Sans"/>
                                <Setter Property="FontSize" Value="18"/>
                                <Setter Property="Foreground" Value="#333333"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Tiền nợ" Binding="{Binding TienNo, StringFormat={}{0:N0} VNĐ}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Open Sans"/>
                                <Setter Property="FontSize" Value="18"/>
                                <Setter Property="Foreground" Value="#333333"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>
