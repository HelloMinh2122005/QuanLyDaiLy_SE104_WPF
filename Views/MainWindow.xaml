                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding NgayTiepNhan, StringFormat={}{0:dd/MM/yyyy}}"
                            Header="Ngày tiếp nhận">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontFamily" Value="Open Sans" />
