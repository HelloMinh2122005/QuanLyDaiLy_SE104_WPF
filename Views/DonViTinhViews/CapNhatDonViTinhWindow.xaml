<Window
    x:Class="QuanLyDaiLy.Views.DonViTinhViews.CapNhatDonViTinhWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CapNhatDonViTinhWindow"
    Width="960"
    Height="465"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <DropShadowEffect
            x:Key="DropShadowEffect"
            BlurRadius="10"
            Opacity="0.5"
            ShadowDepth="0"
            Color="Black" />
    </Window.Resources>

    <Border
        Background="White"
        BorderBrush="#DDDDDD"
        BorderThickness="1"
        CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="1" />
                <RowDefinition Height="300" />
                <RowDefinition Height="1" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".5*" />
                    <ColumnDefinition Width=".5*" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="0"
                    Margin="20,15,0,0"
                    VerticalAlignment="Center">
                    <TextBlock
                        FontFamily="Nunito"
                        FontSize="40"
                        FontStyle="Normal"
                        FontWeight="SemiBold"
                        LineHeight="55"
                        Text="Cập nhật đơn vị tính" />
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    Margin="0,0,20,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                    <Button
                        Width="50"
                        Height="50"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Command="{Binding CloseWindowCommand}"
                        Content="❌"
                        FontFamily="Nunito"
                        FontSize="35"
                        FontStyle="Normal"
                        FontWeight="SemiBold">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                x:Name="buttonBorder"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                <Border.Effect>
                                                    <DropShadowEffect
                                                        x:Name="shadowEffect"
                                                        BlurRadius="0"
                                                        Opacity="0"
                                                        ShadowDepth="0"
                                                        Color="#555555" />
                                                </Border.Effect>
                                            </Border>
                                            <ControlTemplate.Resources>
                                                <Storyboard x:Key="HoverOn">
                                                    <ColorAnimation
                                                        Storyboard.TargetName="buttonBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#D32F2F"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="BlurRadius"
                                                        To="8"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="Opacity"
                                                        To="0.3"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="ShadowDepth"
                                                        To="4"
                                                        Duration="0:0:0.2" />
                                                </Storyboard>
                                                <Storyboard x:Key="HoverOff">
                                                    <ColorAnimation
                                                        Storyboard.TargetName="buttonBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="Transparent"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="BlurRadius"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="Opacity"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="ShadowDepth"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                </Storyboard>
                                            </ControlTemplate.Resources>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard Storyboard="{StaticResource HoverOn}" />
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard Storyboard="{StaticResource HoverOff}" />
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="buttonBorder" Property="Background" Value="#B71C1C" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

            </Grid>
            <!--  Body  -->
            <Border
                Grid.Row="2"
                Margin="15"
                Padding="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="#F7F9FD"
                BorderBrush="Transparent"
                CornerRadius="11"
                Effect="{StaticResource DropShadowEffect}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5*" />
                        <RowDefinition Height="5*" />
                    </Grid.RowDefinitions>

                    <!--  Line 1  -->
                    <Grid
                        Grid.Row="0"
                        Margin="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <!--  Mã đơn vị tính  -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*" />
                                <RowDefinition Height="7*" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Nunito"
                                FontSize="25"
                                FontStyle="Normal"
                                FontWeight="Medium"
                                Foreground="#000000"
                                Text="Mã đơn vị tính" />
                            <TextBox
                                Grid.Row="1"
                                Margin="10"
                                Padding="10,0,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Background="#A2A2A2"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                FontFamily="Nunito"
                                FontSize="18"
                                FontStyle="Normal"
                                FontWeight="SemiBold"
                                Foreground="White"
                                IsReadOnly="True"
                                Text="{Binding MaDonViTinh}"
                                TextAlignment="Left">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="10" />
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>

                    </Grid>

                    <!--  Line 2  -->
                    <!--  Tên đơn vị tính  -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="46*" />
                            <RowDefinition Height="61*" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Margin="20,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontFamily="Nunito"
                            FontSize="25"
                            FontStyle="Normal"
                            FontWeight="Medium"
                            Foreground="#000000"
                            Text="Tên đơn vị tính" />
                        <TextBox
                            Grid.Row="1"
                            Margin="20,0,20,10"
                            Padding="10,0,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            VerticalContentAlignment="Center"
                            Background="#FFFFFF"
                            BorderBrush="#33000000"
                            BorderThickness="1"
                            FontFamily="Nunito"
                            FontSize="18"
                            FontStyle="Normal"
                            FontWeight="Normal"
                            Foreground="Black"
                            Text="{Binding TenDonViTinh}"
                            TextAlignment="Left">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10" />
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>
                </Grid>
            </Border>
            <!--  Footer  -->
            <StackPanel
                Grid.Row="4"
                Margin="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Orientation="Horizontal">
                <Border CornerRadius="8">
                    <Button
                        Width="250"
                        Background="#00AAFF"
                        Command="{Binding EditDonViTinhCommand}"
                        Content="✎ Cập nhật đơn vị tính"
                        FontFamily="Roboto"
                        FontSize="19"
                        FontStyle="Normal"
                        FontWeight="Medium"
                        Foreground="#FFFFFF">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                x:Name="buttonBorder"
                                                Padding="16,10,16,8"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                <Border.Effect>
                                                    <DropShadowEffect
                                                        x:Name="shadowEffect"
                                                        BlurRadius="0"
                                                        Opacity="0"
                                                        ShadowDepth="0"
                                                        Color="#555555" />
                                                </Border.Effect>
                                            </Border>
                                            <ControlTemplate.Resources>
                                                <Storyboard x:Key="HoverOn">
                                                    <ColorAnimation
                                                        Storyboard.TargetName="buttonBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#0088CC"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="BlurRadius"
                                                        To="8"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="Opacity"
                                                        To="0.3"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="ShadowDepth"
                                                        To="4"
                                                        Duration="0:0:0.2" />
                                                </Storyboard>
                                                <Storyboard x:Key="HoverOff">
                                                    <ColorAnimation
                                                        Storyboard.TargetName="buttonBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#00AAFF"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="BlurRadius"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="Opacity"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="ShadowDepth"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                </Storyboard>
                                            </ControlTemplate.Resources>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard Storyboard="{StaticResource HoverOn}" />
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard Storyboard="{StaticResource HoverOff}" />
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="buttonBorder" Property="Background" Value="#006699" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>

                <Border Margin="80,0,0,0" CornerRadius="8">
                    <Button
                        Width="250"
                        Background="#00AAFF"
                        Command="{Binding CloseWindowCommand}"
                        Content="Thoát"
                        FontFamily="Roboto"
                        FontSize="19"
                        FontStyle="Normal"
                        FontWeight="Medium"
                        Foreground="#FFFFFF">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                x:Name="buttonBorder"
                                                Padding="16,10,16,8"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                <Border.Effect>
                                                    <DropShadowEffect
                                                        x:Name="shadowEffect"
                                                        BlurRadius="0"
                                                        Opacity="0"
                                                        ShadowDepth="0"
                                                        Color="#555555" />
                                                </Border.Effect>
                                            </Border>
                                            <ControlTemplate.Resources>
                                                <Storyboard x:Key="HoverOn">
                                                    <ColorAnimation
                                                        Storyboard.TargetName="buttonBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#D32F2F"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="BlurRadius"
                                                        To="8"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="Opacity"
                                                        To="0.3"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="ShadowDepth"
                                                        To="4"
                                                        Duration="0:0:0.2" />
                                                </Storyboard>
                                                <Storyboard x:Key="HoverOff">
                                                    <ColorAnimation
                                                        Storyboard.TargetName="buttonBorder"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#00AAFF"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="BlurRadius"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="Opacity"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                    <DoubleAnimation
                                                        Storyboard.TargetName="shadowEffect"
                                                        Storyboard.TargetProperty="ShadowDepth"
                                                        To="0"
                                                        Duration="0:0:0.2" />
                                                </Storyboard>
                                            </ControlTemplate.Resources>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard Storyboard="{StaticResource HoverOn}" />
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard Storyboard="{StaticResource HoverOff}" />
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="buttonBorder" Property="Background" Value="#B71C1C" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</Window>