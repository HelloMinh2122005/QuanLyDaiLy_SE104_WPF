<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Primary Colors  -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#00AAFF" />
    <SolidColorBrush x:Key="PrimaryHoverColor" Color="#0088CC" />
    <SolidColorBrush x:Key="PrimaryPressedColor" Color="#006699" />
    <SolidColorBrush x:Key="PrimaryBrush" Color="#00AAFF" />
    <!--  Added to match referenced name  -->

    <!--  Secondary Colors  -->
    <SolidColorBrush x:Key="SecondaryColor" Color="#4CAF50" />
    <SolidColorBrush x:Key="SecondaryHoverColor" Color="#43A047" />
    <SolidColorBrush x:Key="SecondaryPressedColor" Color="#388E3C" />

    <!--  Danger Colors  -->
    <SolidColorBrush x:Key="DangerColor" Color="#D32F2F" />
    <SolidColorBrush x:Key="DangerHoverColor" Color="#C62828" />
    <SolidColorBrush x:Key="DangerPressedColor" Color="#B71C1C" />

    <!--  Neutral Colors  -->
    <SolidColorBrush x:Key="TextPrimaryColor" Color="#333333" />
    <SolidColorBrush x:Key="TextSecondaryColor" Color="#555555" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#333333" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#555555" />
    <SolidColorBrush x:Key="BorderColor" Color="#E0E0E0" />
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0" />
    <SolidColorBrush x:Key="BackgroundLightColor" Color="#F7F9FD" />
    <SolidColorBrush x:Key="BackgroundDarkColor" Color="#EAEEF5" />
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="#F7F9FD" />
</ResourceDictionary>