<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Page Header TextBlock Style  -->
    <Style x:Key="PageHeaderTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Nunito" />
        <Setter Property="FontSize" Value="50" />
        <Setter Property="FontStyle" Value="Normal" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="#333333" />
        <Setter Property="LineHeight" Value="50" />
        <Setter Property="Margin" Value="20,10,0,0" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Top" />
    </Style>

    <!--  Window Header TextBlock Style  -->
    <Style x:Key="WindowHeaderTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Nunito" />
        <Setter Property="FontSize" Value="40" />
        <Setter Property="FontStyle" Value="Normal" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="LineHeight" Value="55" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!--  Field Label TextBlock Style  -->
    <Style x:Key="FieldLabelTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Nunito" />
        <Setter Property="FontSize" Value="25" />
        <Setter Property="FontStyle" Value="Normal" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="#000000" />
        <Setter Property="Margin" Value="10,0,0,0" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!--  Field Small Label TextBlock Style  -->
    <Style x:Key="FieldSmallLabelTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Nunito" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontStyle" Value="Normal" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="#000000" />
        <Setter Property="Margin" Value="10,0,0,0" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!--  Field Small Label TextBlock Style  -->
    <Style x:Key="MonthYearWidget" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Nunito" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontStyle" Value="Normal" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="#000000" />
        <Setter Property="Margin" Value="10,0,0,0" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!--  Red Highlight Label TextBlock Style  -->
    <Style x:Key="RedHighlightTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Nunito" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontStyle" Value="Normal" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="Red" />
        <Setter Property="Margin" Value="5,0,0,0" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>
