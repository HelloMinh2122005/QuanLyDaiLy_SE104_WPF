<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Basic Card Style  -->
    <Style x:Key="BasicCardStyle" TargetType="Border">
        <Setter Property="Width" Value="335" />
        <Setter Property="Height" Value="130" />
        <Setter Property="Margin" Value="0,0,30,20" />
        <Setter Property="Background" Value="#E6F1FD" />
        <Setter Property="CornerRadius" Value="10" />
    </Style>

    <!--  Info Card Style (Blue)  -->
    <Style
        x:Key="InfoCardStyle"
        BasedOn="{StaticResource BasicCardStyle}"
        TargetType="Border">
        <Setter Property="Background" Value="#E6F1FD" />
    </Style>

    <!--  Secondary Card Style (Purple)  -->
    <Style
        x:Key="SecondaryCardStyle"
        BasedOn="{StaticResource BasicCardStyle}"
        TargetType="Border">
        <Setter Property="Background" Value="#EDEEFC" />
    </Style>

    <!--  Large Card Style for Charts  -->
    <Style x:Key="LargeCardStyle" TargetType="Border">
        <Setter Property="Background" Value="#F9F9FA" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Margin" Value="0,0,0,20" />
    </Style>

    <!--  Full Width Chart Card  -->
    <Style
        x:Key="FullWidthChartCardStyle"
        BasedOn="{StaticResource LargeCardStyle}"
        TargetType="Border">
        <Setter Property="Width" Value="1430" />
        <Setter Property="Height" Value="500" />
    </Style>

    <!--  Half Width Chart Card  -->
    <Style
        x:Key="HalfWidthChartCardStyle"
        BasedOn="{StaticResource LargeCardStyle}"
        TargetType="Border">
        <Setter Property="Width" Value="705" />
        <Setter Property="Height" Value="400" />
    </Style>

    <!--  Close Button Style for Cards  -->
    <Style x:Key="CardCloseButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="30" />
        <Setter Property="Height" Value="30" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Top" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Content" Value="❌" />
        <Setter Property="FontFamily" Value="Nunito" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontStyle" Value="Normal" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="Gray" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        x:Name="buttonBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <Border.Effect>
                            <DropShadowEffect
                                x:Name="shadowEffect"
                                BlurRadius="0"
                                Opacity="0"
                                ShadowDepth="0"
                                Color="#555555" />
                        </Border.Effect>
                    </Border>
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="HoverOn">
                            <ColorAnimation
                                Storyboard.TargetName="buttonBorder"
                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                To="#D32F2F"
                                Duration="0:0:0.2" />
                            <DoubleAnimation
                                Storyboard.TargetName="shadowEffect"
                                Storyboard.TargetProperty="BlurRadius"
                                To="8"
                                Duration="0:0:0.2" />
                            <DoubleAnimation
                                Storyboard.TargetName="shadowEffect"
                                Storyboard.TargetProperty="Opacity"
                                To="0.3"
                                Duration="0:0:0.2" />
                            <DoubleAnimation
                                Storyboard.TargetName="shadowEffect"
                                Storyboard.TargetProperty="ShadowDepth"
                                To="4"
                                Duration="0:0:0.2" />
                        </Storyboard>
                        <Storyboard x:Key="HoverOff">
                            <ColorAnimation
                                Storyboard.TargetName="buttonBorder"
                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                To="Transparent"
                                Duration="0:0:0.2" />
                            <DoubleAnimation
                                Storyboard.TargetName="shadowEffect"
                                Storyboard.TargetProperty="BlurRadius"
                                To="0"
                                Duration="0:0:0.2" />
                            <DoubleAnimation
                                Storyboard.TargetName="shadowEffect"
                                Storyboard.TargetProperty="Opacity"
                                To="0"
                                Duration="0:0:0.2" />
                            <DoubleAnimation
                                Storyboard.TargetName="shadowEffect"
                                Storyboard.TargetProperty="ShadowDepth"
                                To="0"
                                Duration="0:0:0.2" />
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource HoverOn}" />
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource HoverOff}" />
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="#B71C1C" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>